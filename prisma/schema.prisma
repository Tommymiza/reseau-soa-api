generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int     @id @default(autoincrement())
    email     String  @unique
    password  String
    nom       String
    prenom    String
    telephone String
    opr_id    Int?
    Opr       OPR?    @relation(fields: [opr_id], references: [id])
    isActive  Boolean @default(true)
    role      Role    @default(USER)
}

enum Role {
    ADMIN
    USER
}
